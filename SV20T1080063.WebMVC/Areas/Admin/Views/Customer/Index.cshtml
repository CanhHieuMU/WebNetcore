@model SV20T1080063.WebMVC.Models.PaginationSearchInput
@{
    ViewBag.Title = "Danh sách các khách hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!--Form tìm kiếm-->
        <form id="formSearchInput" action="~/Admin/Customer/Search" method="get">
            @Html.HiddenFor(m => m.PageSize)
            <div class="input-group">
                <input type="text" name="searchValue" value="@Model.SearchValue"
                       class="form-control" placeholder="Nhập tên khách hàng cần tìm...">
                <span class="input-group-btn">
                    <button type="submit" name="searchValue" id="search-btn" class="btn btn-default">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Admin/Customer/Create" class="btn btn-flat btn-primary">
                        <i class="fa fa-plus"></i> Bổ Sung
                    </a>
                </span>
            </div>
        </form>
        <!--Danh sách các nhà cung cấp-->
        <div id="searchResult"></div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function(){
            $("#formSearchInput").submit(function (e){
                e.preventDefault();
                doSearch(1);
                return;
            });
            doSearch(@Model.Page);
    });
    function doSearch(page) {
            var url = $("#formSearchInput").prop("action");
            var postData = $("#formSearchInput").serializeArray();
            postData.push({"name": "page", "value": page});

            $.ajax({
                url: url,
                type: "POST",
                data: postData,
                error: function (){
                    alert("Your request is not valid!");
                },
                success: function (data) {
                    $("#searchResult").html(data);
                }
            });

            return;
    }
</script>
}
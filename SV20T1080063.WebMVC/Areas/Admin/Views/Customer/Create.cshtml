@using SV20T1080063.WebMVC
@model SV20T1080063.DomainModels.Customer
@{

}
<div class="box box-danger">
    <div class="box-header">
        <h3 class="box-title">Nhập thông tin</h3>
    </div>
    <div class="box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }

        <form method="post" action="~/Admin/Customer/Save">
            @Html.HiddenFor(m => m.CustomerID)
            <!-- Nhập tên -->
            <div class="form-group">
                <label>Tên khách hàng</label>

                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-user"></i>
                    </div>
                    @Html.TextBoxFor(m => m.CustomerName, new { @class="form-control", @autofocus="autoforcus", @placeholder="Nhập tên khách hàng"})
                    @Html.ValidationMessageFor(m => m.CustomerName,"" , new{@style="color:#f00"})     
                </div>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-user"></i>
                    </div>
                    @Html.TextBoxFor(m => m.ContactName, new { @class="form-control", @placeholder="Nhập tên liên hệ"})
                    @Html.ValidationMessageFor(m => m.ContactName,"" , new{@style="color:#f00"})
                </div>
            </div>

            <!-- Số điện thoại -->
            <div class="form-group">
                <label>Số điện thoại:</label>

                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-phone"></i>
                    </div>
                    @Html.TextBoxFor(m => m.Phone, new {@class="form-control", @placeholder="Nhập số điện thoại"})
                    @Html.ValidationMessageFor(m => m.Phone,"" , new{@style="color:#f00"})
                </div>
            </div>

            <!-- Tỉnh thành -->
            <div class="form-group">
                <label>Tỉnh thành:</label>
                @Html.DropDownListFor(m => m.Province, SelectListHelper.Province(), new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.Province,"" , new{@style="color:#f00"})
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>

                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-map"></i>
                    </div>
                    @Html.TextBoxFor(m => m.Address, new{@class="form-control", @placeholder="Nhập địa chỉ"})
                    @Html.ValidationMessageFor(m => m.Address,"" , new{@style="color:#f00"})
                </div>
            </div>
            <!-- Email -->
            <div class="form-group">
                <label>Email</label>

                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-envelope"></i>
                    </div>
                    @Html.TextBoxFor(m => m.Email, new{@class="form-control", @placeholder="Nhập Email"})
                    @Html.ValidationMessageFor(m => m.Email,"" , new{@style="color:#f00"})
                </div>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i>
                Lưu dữ liệu
            </button>
            <a href="~/Admin/Customer/Index" class="btn btn-danger">
                Quay lại
            </a>

            <!-- /.box-body -->
        </form>
    </div>
</div>

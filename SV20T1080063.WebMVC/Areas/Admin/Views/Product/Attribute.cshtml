@model SV20T1080063.DomainModels.ProductAttribute

@{

}

<div class="box box-primary">

    <div class="box-body">
        <form class="form-horizontal" action="~/Admin/Product/AddAttribute" method="post">
            @Html.HiddenFor(m => m.AttributeId, new {@id="attributeHidden"})
            @Html.HiddenFor(p => p.ProductId)
            <div class="form-group">
                <label class="control-label col-sm-2">Tên thuộc tính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.AttributeName, new { @class="form-control", @autofocus="autoforcus", @placeholder="Nhập Thuộc tính"})
                    @Html.ValidationMessageFor(m => m.AttributeName,"" , new{@style="color:#f00"})
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá trị thuộc tính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.AttributeValue, new { @class="form-control", @placeholder="Giá trị thuộc tính"})
                    @Html.ValidationMessageFor(m => m.AttributeValue,"" , new{@style="color:#f00"})
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.DisplayOrder, new { @class="form-control", @placeholder="Thứ tự"})
                    @Html.ValidationMessageFor(m => m.DisplayOrder,"" , new{@style="color:#f00"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/Admin/Product/Edit/">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>

</div>



@model SV20T1080063.DomainModels.Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}


<div class="box box-danger">
    <div class="box-body">
        
        <form action="~/Admin/Employee/Delete/@Model.EmployeeID" method="post">
            
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên</label>
                <div class="col-sm-10">
                    <p class="form-control-static" style="border-bottom: solid gray 1px;">@Model.FullName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh</label>
                <div class="col-sm-10">
                    <p class="form-control-static" style="border-bottom: solid gray 1px;">@Model.BirthDate</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ</label>
                <div class="col-sm-10">
                    <p class="form-control-static" style="border-bottom: solid gray 1px;">@Model.Address</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email</label>
                <div class="col-sm-10">
                    <p class="form-control-static" style="border-bottom: solid gray 1px;">@Model.Email</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Trạng thái</label>
                <div class="col-sm-10">
                    <p class="form-control-static" style="border-bottom: solid gray 1px;">@Model.IsWorking</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    <img class="img-fluid" style="max-width:20%" src="~/images/employees/@Model.Photo" alt="Photo">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-remove"></i> Xóa nhân viên
                    </button>
                    <a href="~/Admin/Employee" class="btn btn-default">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>



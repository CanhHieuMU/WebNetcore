@model SV20T1080063.WebMVC.Models.PaginationSearchInput
@{
    ViewBag.Title = "Danh sách nhân viên";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- search form -->
        <form id="formSearchInput" action="~/Admin/Employee/Search" method="get">
            @Html.HiddenFor(m => m.PageSize)
            <div class="input-group">
                <input type="text" name="searchValue" value="@Model.SearchValue" 
                class="form-control" placeholder="Nhập tên khách hàng cần tìm...">

                <span class="input-group-btn">
                    <button style="margin-right: 10px" type="submit" name="search" id="search-btn" class="btn ">
                        <i class="fa fa-search"></i>
                    </button>
                    <!--Bo sung-->
                    <a href="~/Admin/Employee/Create" class="btn btn-primary btn-flat">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </span>
            </div>
        </form>
        <div id="searchResult"></div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#formSearchInput").submit(function (e) {
                e.preventDefault();
                doSearch(1);
                return;
            });
            doSearch(@Model.Page);
        });
        function doSearch(page) {
            var url = $("#formSearchInput").prop("action");
            var postData = $("#formSearchInput").serializeArray();
            postData.push({ "name": "page", "value": page });

            $.ajax({
                url: url,
                type: "POST",
                data: postData,
                error: function () {
                    alert("Your request is not valid!");
                },
                success: function (data) {
                    $("#searchResult").html(data);
                }
            });

            return;
        }
    </script>
}


@using SV20T1080063.WebMVC
@model SV20T1080063.DomainModels.Category
@{
    
}

<div class="box box-danger">
    <div class="box-header">
        <h3 class="box-title">Nhập thông tin</h3>
    </div>
    <div class="box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        <form method="post" action="~/Admin/Category/Save">
            @Html.HiddenFor(m => m.CategoryID)
        <!-- Nhập tên -->
        <div class="form-group">
            <label>Tên Loại hàng</label>

            <div class="input-group">
                <div class="input-group-addon">
                    <i class="fa fa-clipboard"></i>
                </div>
                    @Html.TextBoxFor(m => m.CategoryName, new { @class="form-control", @autofocus="autoforcus", @placeholder="Nhập tên loại hàng"})
                    @Html.ValidationMessageFor(m => m.CategoryName,"" , new{@style="color:#f00"})
            </div>
        </div>
        <!-- Nhập mô tả -->
        <div class="form-group">
            <label>Mô tả</label>

            <div class="input-group">
                <div class="input-group-addon">
                    <i class="fa fa-info"></i>
                </div>
                    @Html.TextBoxFor(m => m.Description, new { @class="form-control", @placeholder="Nhập mô tả"})
                    @Html.ValidationMessageFor(m => m.Description,"" , new{@style="color:#f00"})

                </div>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save"></i>
            Lưu dữ liệu
        </button>
        <a href="~/Admin/Category" class="btn btn-danger">
            Quay lại
        </a>

        <!-- /.box-body -->
        </form>
    </div>
</div>



@model SV20T1080063.DomainModels.Shipper
@{
    ViewBag.Title = "Xóa người giao hàng";
}

<div class="box box-danger">
    <div class="box-body">
        <form action="~/Admin/Shipper/Delete/@Model.ShipperID" method="post">
        <!-- Nhập tên -->
        <div class="form-group">
            <label>Tên loại hàng</label>
            <p class="form-control-static" style="border-bottom: solid gray 1px;">@Model.ShipperName</p>
        </div>
        <!-- Mô tả -->
        <div class="form-group">
            <label>Phone</label>
            <p class="form-control-static" style="border-bottom: solid gray 1px;">@Model.Phone</p>
        </div>

        <button type="submit" class="btn btn-danger">
            <i class="fa fa-remove"></i>
            Xóa dữ liệu
        </button>
        <a href="~/Admin/Shipper/Index" class="btn btn-primary">
            Quay lại
        </a>
        
        <!-- /.box-body -->
        </form>
    </div>
</div>




